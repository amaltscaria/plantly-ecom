<script>
    document.addEventListener('DOMContentLoaded', function () {
      const myForm = document.getElementById('addProductForm');
      const imageUploadInput = document.getElementById('imageUpload');
      const errorMessageContainer = document.getElementById('errorMessage');
      const imagePreviewContainer = document.getElementById('imagePreview');
      let croppers = []; // Store Cropper.js instances for each image
  
      imageUploadInput.addEventListener('change', function () {
        imagePreviewContainer.innerHTML = ''; // Clear previous previews
        errorMessageContainer.innerHTML = '';
  
        const files = this.files;
  
        // Check if the number of selected files exceeds the limit (5)
        if (files.length > 5) {
          errorMessageContainer.textContent = 'You can select a maximum of 5 images.';
          this.value = ''; // Clear the input field
          return;
        }
  
        for (let i = 0; i < Math.min(5, files.length); i++) {
          const file = files[i];
          const reader = new FileReader();
  
          reader.onload = function (e) {
            const container = document.createElement('div');
            container.classList.add('img-container', 'mr-2');
  
            const img = document.createElement('img');
            img.src = e.target.result;
            img.classList.add('img-thumbnail');
  
            // Set a fixed size for the image container
            container.style.width = '200px';
            container.style.height = '200px';
  
            container.appendChild(img);
            imagePreviewContainer.appendChild(container);
  
            // Initialize Cropper.js on the image
            const cropper = new Cropper(img, {
              aspectRatio: 1,  
              viewMode: 1,
              autoCropArea: 0,
            });
  
            // Store Cropper instance in the array
            croppers.push(cropper);
          };
  
          reader.readAsDataURL(file);
        }
      });
  
