      <!-- Unlist Product Modal -->
<div class="modal fade" id="unlistProductModal" tabindex="-1" aria-labelledby="unlistProductModalLabel" aria-hidden="true">
  <div class="modal-dialog">
      <div class="modal-content">
          <div class="modal-header">
              <h5 class="modal-title" id="unlistProductModalLabel">List/Unlist Product</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
              <p>Are you sure you want to make the selected changes?</p>
          </div>
          <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <button type="submit" id = "unListButton" class="btn btn-primary">Confirm</button>
          </div>
      </div>
  </div>
</div>
<!-- End Unlist Category Modal -->
<script>
  function UnlistProduct(id,isListed) {
      const unListButton = document.getElementById('unListButton');
    
      $('#unlistProductModal').modal('show');
  
      // Add a new click event listener
      unListButton.addEventListener('click', function (event) {
          unList(event, id);
      });
  }
  async function unList(event, id) {
      event.preventDefault();    
      // Make a fetch request to update the category
      try {
          const response = await fetch(`/admin/listUnlistProduct/${id}`, {
              method: 'PATCH', // Use the PATCH method
              headers: {
                  'Content-Type': 'application/json',
              },
              // You can include a request body if needed
              // body: JSON.stringify({
              //     // your data here
              // }),
          });
  
          if (response.ok) {
              window.location.reload();
          } else {
              // Error handling
              console.error('Error unlisting category');
              window.location.reload();
          }
      } catch (error) {
          console.error('Error unlisting category:', error);
      } finally {
          // Close the modal after the request is complete
          $('#unlistProductModal').modal('hide');
      }
  }
  
  </script>
