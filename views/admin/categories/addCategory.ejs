    <script>
      document.getElementById('addCategoryForm').addEventListener('submit', function(event) {
        // Call the validation function
        validateForm(event);
      });

      function validateForm(event) {
        // Reset previous errors
        document.getElementById('categoryNameError').innerText = '';
        document.getElementById('descriptionError').innerText = '';

        // Get form values
        const categoryName = document.getElementById('categoryNameLabel').value;
        const description = document.getElementById('description').value;

        // Validate Category Name (example: not empty)
        if (!categoryName.trim()) {
          document.getElementById('categoryNameError').innerText = 'Category Name is required';
          // Prevent the form submission
          event.preventDefault();
        }

        // Validate Description (example: not empty)
        if (!description.trim()) {
          document.getElementById('descriptionError').innerText = 'Description is required';
          // Prevent the form submission
          event.preventDefault();
          return;
        }

        // If all validations pass, the form will be submitted
      }
