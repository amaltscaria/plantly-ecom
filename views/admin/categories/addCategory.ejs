                <label for="description" class="form-label">Description</label>
                <!-- Regular Textarea -->
                <textarea name="description" id="description" class="form-control" rows="5" placeholder="Type your description..." aria-label="Type your description..."></textarea>
                <div id="descriptionError" class="text-danger"></div>
              </div>
              <!-- End Description Form -->
            </div>
            <!-- End Col -->
          </div>
          <!-- End Row -->

          <div class="text-center">
            <button id="submit" class="btn btn-primary" onclick="validateForm()">Add Category</button>
            <!-- Button to go to All Categories page -->
            <a href="/admin/categories" class="btn btn-secondary">All Categories</a>
          </div>
        </div>
        <!-- End Content -->
      </main>
