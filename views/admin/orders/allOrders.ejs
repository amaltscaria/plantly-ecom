                                    <%}else if(orders[i].products[j].status==='Return Requested'){%>
                                    style="background-color: orange;color:white"
                                    <%}else if(orders[i].products[j].status==='Delivered'){%>
                                    style="background-color: green;color:white"
                                    <%}else if(orders[i].products[j].status==='Cancelled'){%>
