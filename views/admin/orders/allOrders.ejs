      <!-- Update Status Modal -->
<div class="modal fade" id="updateStatusModal" tabindex="-1" aria-labelledby="updateStatusModalLabel" aria-hidden="true">
  <div class="modal-dialog">
      <div class="modal-content">
          <div class="modal-header">
              <h5 class="modal-title text-primary" id="updateStatusModalLabel"></h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
              <p>Are you sure you want to make the selected changes?</p>
          </div>
          <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <button type="submit" id = "shipButton" class="btn btn-primary">Confirm</button>
          </div>
      </div>
  </div>
</div>

      <!-- Return Request Modal -->
      <div class="modal fade" id="returnRequestModal" tabindex="-1" aria-labelledby="updateStatusModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-primary" id="updateStatusModalLabel">Review the return request</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p id = "Return Reason">Return Reason</p>
                </div>
                <div class="modal-footer">
                    <button type="button" id = "rejectButton" class="btn btn-danger">Reject</button>
                    <button type="button" id = "returnButton" class="btn btn-primary">Confirm</button>
                </div>
            </div>
        </div>
      </div>
<script>
  function shipProduct(status,orderId,productId) {
    console.log(status,orderId, productId);
    if(status==='Placed'){
    $('#updateStatusModalLabel').text('Update Status to Shipped?')
    }
    else if(status ==='Shipped')
    $('#updateStatusModalLabel').text('Update Status to Out For Delivery?')
    else if(status ==='Out For Delivery')
    $('#updateStatusModalLabel').text('Update Status to Delivered?')
     $('#updateStatusModal').modal('show');

     $('#shipButton').click(()=>{
        
        fetch('/admin/orderStatus',{
            method: 'PATCH',
            headers: {
                'Content-Type': 'application/json',
            },
            body:JSON.stringify({
                orderId:orderId,
                productId:productId,
            })
        }
        )
        .then(()=>{
            
            $('#updateStatusModal').modal('hide');
            $('#item-status-update').css('display','block')
            setTimeout(()=>{
                window.location.reload();
            },1000)
           
        })
        .catch((err)=>{
            console.log(error);
        })

     })
      
  }

  function returnProduct(orderId,productId) {
     $('#returnRequestModal').modal('show');

     $('#returnButton').click(()=>{
        
        fetch('/admin/orderReturn',{
            method: 'PATCH',
            headers: {
                'Content-Type': 'application/json',
            },
            body:JSON.stringify({
                status:'success',
                orderId:orderId,
                productId:productId,
            })
        }
        )
        .then(()=>{
          $('#returnRequestModal').modal('hide');
            $('#item-return-update').css('display','block');
            setTimeout(()=>{
                window.location.reload();
            },1000)
        })
        .catch((err)=>{
            console.log(error);
        })

     })
     $('#rejectButton').click(()=>{
        fetch('/admin/orderReturn',{
            method: 'PATCH',
            headers: {
                'Content-Type': 'application/json',
            },
            body:JSON.stringify({
                status:'rejected',
                orderId:orderId,
                productId:productId,
            })
        }
        )
        .then(()=>{
            $('#item-cancel-update').css('display','block')
            setTimeout(()=>{
                window.location.reload();
            })
        })
        .catch((err)=>{
            console.log(error);
        })

     })
      
  }
