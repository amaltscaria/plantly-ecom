    <script>
      document.getElementById('addCouponForm').addEventListener('submit', async function(event) {
        try {
          event.preventDefault();
          $('#coupon-add-err').css('display', 'none');
          // Call the validation function
          const val = validateForm();
          if (val) {
            const couponForm = $('#addCouponForm');
            const formData = new FormData(this);
            const response = await fetch('/admin/addCoupons', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify(Object.fromEntries(formData.entries())),
            })
            if (response.status === 200) {
              $('#coupon-add').css('display', 'block');
              setTimeout(() => {
                $('#addCoupon').load('/admin/addCoupons #addCoupon');
              }, 1000);
            }
            if(response.status === 409){
              $('#coupon-add-err').css('display', 'block');
            }
          }
        } catch (err) {
          console.log(err);
        }
      });

      function validateForm() {
        // Reset previous errors
        document.getElementById('couponCodeError').innerText = '';
        document.getElementById('discountPercentageError').innerText = '';
        document.getElementById('couponDescriptionError').innerText = '';
        document.getElementById('expiryDateError').innerText = '';
        document.getElementById('eligibilityCriteriaError').innerText = '';
        $('#criteriaValueError').text('');

        //    // Get form values
        const couponCode = document.getElementById('couponCodeLabel').value;
        const discountPercentage = document.getElementById('discountPercentageLabel').value;
        const expiryDate = document.getElementById('expiryDateLabel').value;
        const couponDescription = document.getElementById('couponDescription').value;
        const eligibilityCriteria = document.getElementById('eligibilityCriteria').value;
        const maximumDiscount = document.getElementById('maxDiscountAmountLabel').value;
        const availableCouponCount = document.getElementById('availableCouponCountLabel').value;
        const amountInput = $('#criteriaValue').val();
        const categoryInput = $('#categorySelect').val()
        const expiry = new Date(expiryDate);
        expiry.setHours(0, 0, 0, 0);
        let isValid = true;

        if (!couponCode.trim()) {
          document.getElementById('couponCodeError').innerText = 'Coupon Code is required';
          // Prevent the form submission
          isValid = false;
        }

        if (discountPercentage < 1 || discountPercentage > 100) {
          document.getElementById('discountPercentageError').innerText = 'Please Provide a valid discount percentage';
          // Prevent the form submission
          isValid = false;

        }
        const date = new Date();
        date.setHours(0,0,0,0);
        if (!expiryDate || expiry < date) {
          document.getElementById('expiryDateError').innerText = 'Please Provide a valid date';
          // Prevent the form submission
          isValid = false;
        }

        if (!couponDescription.trim()) {
          document.getElementById('couponDescriptionError').innerText = 'Coupon description is required';
          // Prevent the form submission
          isValid = false;
        }

        if (!eligibilityCriteria.trim()) {
          document.getElementById('eligibilityCriteriaError').innerText = 'Please Provide a eligibility criteria';
          // Prevent the form submission
          isValid = false;
        }
        const selectedCriterion = document.getElementById('eligibilityCriteria').value;
        if (selectedCriterion === 'amount') {
          console.log(amountInput);
          if (amountInput < 1 || amountInput > 100000) {
            document.getElementById('criteriaValueError').innerText = 'Please Enter a valid amount';
            isValid = false;
          }
        } else if (selectedCriterion === 'category') {
          if (!categoryInput.trim()) {
            document.getElementById('criteriaValueError').innerText = 'Please select a category ';
            isValid = false;
          }
        }
        if (maximumDiscount < 1 || maximumDiscount > 500) {
            document.getElementById('maxDiscountAmountError').innerText = 'Please Enter a valid amount';
            isValid = false;
          }
          if (availableCouponCount < 1) {
            document.getElementById('availableCouponCountError').innerText = 'Please Enter a valid count';
            isValid = false;
          }
        // If all validations pass, the form will be submitted
        return isValid;
      }
    </script>

    <script>
      $('#eligibilityCriteria').change(() => {
        // Get the selected eligibility criterion
        const selectedCriterion = document.getElementById('eligibilityCriteria').value;

        // Hide all input fields by default
        document.getElementById('amountInput').style.display = 'none';
        document.getElementById('categoryInput').style.display = 'none';

        // Show the input field based on the selected criterion
        if (selectedCriterion === 'amount') {
          document.getElementById('amountInput').style.display = 'block';
        } else if (selectedCriterion === 'category') {
          document.getElementById('categoryInput').style.display = 'block';
        }
      })
      //min = current Date
      document.getElementById('expiryDateLabel').setAttribute('min', getCurrentDate())

      function getCurrentDate() {
        const today = new Date();
        const dd = String(today.getDate()).padStart(2, '0');
        const mm = String(today.getMonth() + 1).padStart(2, '0'); // January is 0!
        const yyyy = today.getFullYear();

        return yyyy + '-' + mm + '-' + dd;
      }
