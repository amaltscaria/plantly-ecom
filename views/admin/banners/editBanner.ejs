const croppers = [];
function loadCropper(img, imagePath, index) {
    console.log(img,'hi');
    // Your Cropper.js initialization code here
    const cropper = new Cropper(img, {
      aspectRatio: 3/1.1,
      viewMode: 1,
      autoCropArea: 0.8,
    });
    if(index===0){
      croppers[index] = cropper;
    } else
    croppers.push(cropper);
    $(img).data('cropper', cropper);
  }
  function changeImage(input) {
  const files = input.files;
  if (files.length > 0) {
    const reader = new FileReader();

    reader.onload = function (e) {
      const imageElement = $(`#croppable-image`);
      const cropperInstance = imageElement.data('cropper');
    
      // If Cropper.js is initialized on this image, destroy the current instance
      if (cropperInstance) {
        cropperInstance.destroy();
      }

      // Set the src attribute of the corresponding image element
      imageElement.attr('src', e.target.result);

      // Reinitialize Cropper.js on the updated image
      loadCropper(imageElement[0], e.target.result, 0);
    };

    reader.readAsDataURL(files[0]);
  }
}


$('#addBannerForm').submit(async ()=>{
  try{
            event.preventDefault();
            if(!validateForm())return;
            const form = document.getElementById('addBannerForm');
            const formData = new FormData(form);
       
            // Get the cropped base64 data from the canvas
            const croppedDataUrl = croppers[0].getCroppedCanvas().toDataURL('image/png');
  
            // Convert base64 to Blob
            const blob = dataURItoBlob(croppedDataUrl);
  
            // Append the Blob to the FormData object
            formData.append(`croppedBanner`, blob, `banner.png`);
  
        
          const id = $('#id').val();
           const response = await fetch(`/admin/editBanner/${id}`,{
                method:'PATCH',
                body:formData
            })
            if(response.status === 409){
                $('#bannerErrorId').css('display','block');
                setTimeout(()=>{
                    $('#bannerErrorId').css('display','none');
                },1500);
            }
            if(response.status === 200){
                $('#successModal').modal('show');
                setTimeout(()=>{
                    window.location.href = '/admin/banners';
                },1500);
            }if(response.status === 500){
                console.log('Internal Sever Error');
            }
            }catch(err){
                console.log(err);
            }

})

function validateForm(){
           const bannerName = $('#bannerNameLabel').val();
           const targetType = $('#targetTypeLabel').val();
           const targetId = $('#targetIdLabel').val();
           const startDate = $('#startDateLabel').val();
           const endDate = $('#expiryDateLabel').val();
           const description = $('#description').val();
           console.log(bannerName, targetId, startDate, endDate, description);
           
            const start = new Date(startDate);
            start.setHours(0,0,0,0);   
            const expiry = new Date(endDate);
            expiry.setHours(0, 0, 0, 0);
            let isValid = true;
        // Set all error messages to empty initially
            document.getElementById('bannerNameError').innerText = '';
            document.getElementById('targetTypeError').innerText = '';
            document.getElementById('startDateError').innerText = '';
            document.getElementById('expiryDateError').innerText = '';
            document.getElementById('descriptionError').innerText = '';
            document.getElementById('targetIdError').innerText = '';
        if (!bannerName.trim()) {
          document.getElementById('bannerNameError').innerText = 'Banner name is required';
          // Prevent the form submission
          isValid = false;
        }

        if (!targetType.trim()) {
          document.getElementById('targetTypeError').innerText = 'Please Provide a target type';
          // Prevent the form submission
          isValid = false;

        }
        const date = new Date();
        date.setHours(0,0,0,0);
        if (!startDate || start < date) {
          document.getElementById('startDateError').innerText = 'Please Provide a valid start date';
          // Prevent the form submission
          isValid = false;
        }
        
        if (!endDate || expiry < date) {
          document.getElementById('expiryDateError').innerText = 'Please Provide a valid end date';
          // Prevent the form submission
          isValid = false;
        }
        if (expiry <= start) {
          document.getElementById('expiryDateError').innerText = 'Expiry date should be greater than the start date';
          // Prevent the form submission
          isValid = false;
        }

        if (!description.trim()) {
          document.getElementById('descriptionError').innerText = 'Banner description is required';
          // Prevent the form submission
          isValid = false;
        }

        if (!targetId.trim()) {
          document.getElementById('targetIdError').innerText = 'Please Provide a targetId';
          // Prevent the form submission
          isValid = false;
        }
       
        // If all validations pass, the form will be submitted
        return isValid;
           
        }

        $('#startDateLabel').attr('min',getCurrentDate());
        $('#expiryDateLabel').attr('min', getCurrentDate());

        function getCurrentDate() {
        const today = new Date();
        const dd = String(today.getDate()).padStart(2, '0');
        const mm = String(today.getMonth() + 1).padStart(2, '0'); // January is 0!
        const yyyy = today.getFullYear();

        return yyyy + '-' + mm + '-' + dd;
    }
    // Function to convert data URI to Blob
    function dataURItoBlob(dataURI) {
        const byteString = atob(dataURI.split(',')[1]);
        const mimeString = dataURI.split(',')[0].split(':')[1].split(';')[0];
        const ab = new ArrayBuffer(byteString.length);
        const ia = new Uint8Array(ab);
        for (let i = 0; i < byteString.length; i++) {
          ia[i] = byteString.charCodeAt(i);
        }
        return new Blob([ab], { type: mimeString });
      }


