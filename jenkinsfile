pipeline {
    agent any
    tools {
        nodejs "NodeJS"
    }
    stages {
        stage('Build') {
            steps {
                script {
                    sh 'npm install'
                    sh 'npm test'
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    sh 'npm run build'
                    // Example deployment steps
                    sh 'echo "Deploying to production..."'
                }
            }
        }
    }
}
